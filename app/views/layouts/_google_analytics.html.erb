<% if Rails.env.production? && on_heroku? %>
  <script async src="https://www.googletagmanager.com/gtag/js?id=<%= Rails.application.credentials.google[:analytics_key] %>"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    
    gtag('config', '<%= Rails.application.credentials.google[:analytics_key] %>');
  </script>
<% end %>
