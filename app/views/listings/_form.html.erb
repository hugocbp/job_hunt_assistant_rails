	<%= form_for @listing do |f| %>
  <%= render "shared/errors", object: @listing %>
  <div class="form-group">
    <%= f.label "Title" %>
    <%= f.text_field :title , class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label "Company / Location" %>
    <% if @companies.blank? %>
      <div class="alert alert-warning" role="alert">
        You don't have any companies created yet... To create a listing, first <%= link_to 'create a company', new_company_path, class: 'alert-link' %>
      </div>
    <% else %>
      <%= collection_select(:listing, :company_id, @companies, :id, :name, { prompt: true }, { required: true, class: 'form-control'}) %>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.label "Description" %>
    <%= f.text_area :description , class: "form-control", rows: 10%>
  </div>
  <%= f.submit class: 'btn btn-outline-primary btn-block btn-large' %>
<% end %>
